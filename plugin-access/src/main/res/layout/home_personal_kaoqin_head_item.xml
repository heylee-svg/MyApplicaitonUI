<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <LinearLayout
            android:id="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="26dp"
            android:paddingTop="13dp"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingRight="26dp"
            >

        <ImageView

                android:id="@+id/headImg"
                tools:src="@tools:sample/avatars"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
        <LinearLayout
                android:layout_marginLeft="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <TextView
                    android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名:欧阳娜娜"
                        android:textColor="#ff484848"

                        android:textSize="14sp"
                        />
                <TextView
                    android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="性别:女"
                        android:textColor="#ff484848"
                        android:textSize="14sp"
                        />
                <TextView
                    android:id="@+id/job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="职位:员工"
                        android:textColor="#ff484848"
                        android:textSize="14sp"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <TextView
                    android:id="@+id/shouldNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应出勤(天):21"
                        android:textColor="#ff484848"

                        android:textSize="14sp"
                        />
                <TextView
                    android:id="@+id/actualNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="实际出勤(天):21"
                        android:textColor="#ff484848"
                        android:textSize="14sp"
                        />
                <TextView
                    android:id="@+id/face_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="脸库:10号库"
                        android:textColor="#ff484848"
                        android:textSize="14sp"
                        />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
            android:id="@+id/line_h"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/devide_line"
            android:layout_below="@id/toplayout"
            />

    <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_below="@id/line_h"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            >

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent"
                >
            <TextView
                android:id="@+id/abnormalNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 "
                    android:textColor="#ff636363"
                    android:textSize="16sp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="异常考勤(天)"
                    android:layout_marginTop="8dp"
                    android:textColor="#ffacacac"
                    android:textSize="14sp"
                    />

        </LinearLayout>
        <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/devide_line"
                />
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent"
                >
            <TextView
                android:id="@+id/normalNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 "
                    android:textColor="#ff636363"
                    android:textSize="16sp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正常考勤(天)"
                    android:layout_marginTop="8dp"
                    android:textColor="#ffacacac"
                    android:textSize="14sp"
                    />

        </LinearLayout>


    </LinearLayout>

    <View
            android:layout_below="@id/bottom_layout"
            android:layout_width="match_parent"
            android:background="@color/devide_line"
            android:layout_height="4dp"/>

</RelativeLayout>