<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.cylan.smart.plugin.widget.SmartTabLayout
            android:id="@+id/smartTabLayout"
            style="@style/customergrouptablayou"
            app:tabMode="fixed"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/devideline"
            android:layout_below="@id/smartTabLayout"
            android:layout_width="match_parent"
            android:background="@color/devide_line"
            android:layout_height="1px"/>

    <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_below="@id/devideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>